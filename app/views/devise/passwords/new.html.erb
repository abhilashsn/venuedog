<div id="content" class="page users_new">


  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div><%= f.submit "Send me reset password instructions", :class=>"btn btn-orange" %></div>
  <% end %>

  <%= clear %>
</div>


<% content_for :page_title, "Forgot Password" %>
